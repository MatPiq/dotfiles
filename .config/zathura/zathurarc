set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"

# Basic Settings

set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
set window-width 960
set window-height 1080

map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor
map k 5k
map j 5kset selection-clipboard clipboard

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# Startup options
# set adjust-open width
# set recolor true
